<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="ch.eugster.events.core.perspective">
         <view
               closeable="true"
               id="ch.eugster.events.rubric.view"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="ch.eugster.events.addresstype.view"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="ch.eugster.events.course.category"
            class="ch.eugster.events.rubric.views.RubricView"
            icon="icons/rubric_16.png"
            id="ch.eugster.events.rubric.view"
            name="Rubriken"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="ch.eugster.events.rubric.editors.RubricEditor"
            icon="icons/rubric_16.png"
            id="ch.eugster.events.rubric.editor"
            name="Rubrik">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="ch.eugster.events.rubric.editor"
            targetID="ch.eugster.events.rubric.editor">
         <action
               class="ch.eugster.events.ui.actions.ResetEditorActionDelegate"
               definitionId="org.eclipse.ui.file.revert"
               disabledIcon="icons/reset_grey_16.png"
               hoverIcon="icons/reset_16.png"
               icon="icons/reset_16.png"
               id="ch.eugster.events.rubric.editor.revert"
               label="Revert"
               mode="FORCE_TEXT"
               style="push"
               toolbarPath="ch.eugster.events.ui.toolbar.editor.actions"
               tooltip="Verwerfen der vorgenommenen Änderungen">
         </action>
         <action
               class="ch.eugster.events.ui.actions.SaveEditorActionDelegate"
               definitionId="org.eclipse.ui.file.save"
               disabledIcon="icons/save_grey_16.png"
               hoverIcon="icons/save_16.png"
               icon="icons/save_16.png"
               id="ch.eugster.events.rubric.editor.save"
               label="Save"
               mode="FORCE_TEXT"
               style="push"
               toolbarPath="ch.eugster.events.ui.toolbar.editor.actions"
               tooltip="Speichern der vorgenommenen Änderungen">
         </action>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="ch.eugster.events.rubric.commands.view"
            name="Bearbeiten">
      </category>
      <command
            categoryId="ch.eugster.events.rubric.commands.view"
            description="Hinzufügen einer neuen Rubrik"
            id="ch.eugster.events.rubric.command.add"
            name="Hinzufügen">
      </command>
      <command
            categoryId="ch.eugster.events.rubric.commands.view"
            description="Entfernen der gewählten Rubrik"
            id="ch.eugster.events.rubric.command.delete"
            name="Entfernen">
      </command>
      <command
            categoryId="ch.eugster.events.rubric.commands.view"
            description="Bearbeiten der ausgewählten Rubrik"
            id="ch.eugster.events.rubric.command.edit"
            name="Bearbeiten">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ch.eugster.events.rubric.handlers.AddRubricHandler"
            commandId="ch.eugster.events.rubric.command.add">
         <activeWhen>
            <reference
                  definitionId="active.part.rubric.view">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="active.part.rubric.view">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="ch.eugster.events.rubric.handlers.DeleteRubricHandler"
            commandId="ch.eugster.events.rubric.command.delete">
         <activeWhen>
            <reference
                  definitionId="active.part.rubric.view">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="selected.single.item.rubric">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="ch.eugster.events.rubric.handlers.EditRubricHandler"
            commandId="ch.eugster.events.rubric.command.edit">
         <activeWhen>
            <reference
                  definitionId="active.part.rubric.view">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="selected.single.item.rubric">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:ch.eugster.events.rubric.view?after=additions">
         <command
               commandId="ch.eugster.events.rubric.command.add"
               disabledIcon="icons/add_grey_16.gif"
               hoverIcon="icons/add_16.gif"
               icon="icons/add_16.gif"
               id="ch.eugster.events.rubric.command.add"
               label="Hinzufügen"
               mnemonic="N"
               style="push"
               tooltip="Hinzufügen einer neuen Rubrik">
         </command>
         <command
               commandId="ch.eugster.events.rubric.command.edit"
               disabledIcon="icons/edit_grey_16.png"
               hoverIcon="icons/edit_16.png"
               icon="icons/edit_16.png"
               id="ch.eugster.events.rubric.command.edit"
               label="Bearbeiten"
               style="push"
               tooltip="Bearbeiten der ausgewählten Rubrik">
         </command>
         <command
               commandId="ch.eugster.events.rubric.command.delete"
               disabledIcon="icons/delete_grey_16.png"
               hoverIcon="icons/delete_16.png"
               icon="icons/delete_16.png"
               id="ch.eugster.events.rubric.command.delete"
               label="Entfernen"
               mnemonic="L"
               style="push"
               tooltip="Enternen der ausgewählten Rubrik">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:ch.eugster.events.rubric.view?after=additions">
         <command
               commandId="ch.eugster.events.rubric.command.add"
               disabledIcon="icons/add_grey_16.gif"
               hoverIcon="icons/add_16.gif"
               icon="icons/add_16.gif"
               id="ch.eugster.events.rubric.command.add"
               label="Hinzufügen"
               mnemonic="N"
               style="push"
               tooltip="Hinzufügen einer neuen Rubrik">
         </command>
         <command
               commandId="ch.eugster.events.rubric.command.edit"
               disabledIcon="icons/edit_grey_16.png"
               hoverIcon="icons/edit_16.png"
               icon="icons/edit_16.png"
               id="ch.eugster.events.rubric.command.edit"
               label="Bearbeiten"
               style="push"
               tooltip="Bearbeiten der ausgewählten Rubrik">
         </command>
         <command
               commandId="ch.eugster.events.rubric.command.delete"
               disabledIcon="icons/delete_grey_16.png"
               hoverIcon="icons/delete_16.png"
               icon="icons/delete_16.png"
               id="ch.eugster.events.rubric.command.delete"
               label="Entfernen"
               mnemonic="L"
               style="push"
               tooltip="Enternen der ausgewählten Rubrik">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:ch.eugster.events.course.menu.views?after=additions">
         <command
               commandId="org.eclipse.ui.views.showView"
               disabledIcon="icons/show_view_grey_16.png"
               hoverIcon="icons/rubric_16.png"
               icon="icons/rubric_16.png"
               label="Rubriken"
               style="push"
               tooltip="Aktivieren der Rubrikensicht">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="ch.eugster.events.rubric.view">
            </parameter>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="selected.single.item.rubric">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <and>
               <iterate>
                  <instanceof
                        value="ch.eugster.events.persistence.model.Rubric">
                  </instanceof>
               </iterate>
            </and>
         </with>
      </definition>
      <definition
            id="active.part.rubric.view">
         <with
               variable="activePart">
            <instanceof
                  value="ch.eugster.events.rubric.views.RubricView">
            </instanceof>
         </with>
      </definition>
      <definition
            id="active.menu.selection.single.rubric">
         <with
               variable="activeMenuSelection">
            <and>
               <count
                     value="1">
               </count>
               <iterate>
                  <instanceof
                        value="ch.eugster.events.persistence.model.Rubric">
                  </instanceof>
               </iterate>
            </and>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ch.eugster.events.rubric.command.add"
            contextId="ch.eugster.events.rubric.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+N">
      </key>
      <key
            commandId="ch.eugster.events.rubric.command.delete"
            contextId="ch.eugster.events.rubric.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+D">
      </key>
      <key
            commandId="ch.eugster.events.rubric.command.edit"
            contextId="ch.eugster.events.rubric.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+E">
      </key>
      <key
            commandId="org.eclipse.ui.file.revert"
            contextId="ch.eugster.events.rubric.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+R">
      </key>
      <key
            commandId="org.eclipse.ui.file.save"
            contextId="ch.eugster.events.rubric.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+S">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="ch.eugster.events.rubric.context"
            name="Kontext Rubrik"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>

</plugin>
