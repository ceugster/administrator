<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="ch.eugster.events.addresstype.views.AddressTypeView"
            icon="icons/propeller_16x16.png"
            id="ch.eugster.events.addresstype.view"
            name="Adressart"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="ch.eugster.events.core.perspective">
         <view
               closeable="true"
               id="ch.eugster.events.addresstype.view"
               minimized="false"
               moveable="true"
               ratio=".7"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="ch.eugster.events.addresstype.editors.AddressTypeEditor"
            default="false"
            icon="icons/propeller_16x16.png"
            id="ch.eugster.events.addresstype.editor"
            name="Adressart">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="ch.eugster.events.addresstype.editor"
            targetID="ch.eugster.events.addresstype.editor">
         <action
               class="ch.eugster.events.ui.actions.ResetEditorActionDelegate"
               definitionId="org.eclipse.ui.file.revert"
               disabledIcon="icons/reset_grey_16.png"
               hoverIcon="icons/reset_16.png"
               icon="icons/reset_16.png"
               id="ch.eugster.events.addresstype.editor.revert"
               label="Revert"
               mode="FORCE_TEXT"
               style="push"
               toolbarPath="ch.eugster.events.ui.toolbar.editor.actions"
               tooltip="Verwerfen der vorgenommenen Änderungen">
         </action>
         <action
               class="ch.eugster.events.ui.actions.SaveEditorActionDelegate"
               definitionId="org.eclipse.ui.file.save"
               disabledIcon="icons/save_grey_16.png"
               hoverIcon="icons/save_16.png"
               icon="icons/save_16.png"
               id="ch.eugster.events.addresstype.editor.save"
               label="Save"
               mode="FORCE_TEXT"
               style="push"
               toolbarPath="ch.eugster.events.ui.toolbar.editor.actions"
               tooltip="Speichern der Änderungen im aktuellen Editor">
         </action>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:ch.eugster.events.person.views.menu?after=additions">
         <command
               commandId="org.eclipse.ui.views.showView"
               hoverIcon="icons/propeller_16x16.png"
               icon="icons/propeller_16x16.png"
               label="Adressarten"
               style="push"
               tooltip="Aktivieren der Adressartensicht">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="ch.eugster.events.addresstype.view">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:ch.eugster.events.addresstype.view">
         <command
               commandId="ch.eugster.events.addresstype.command.add"
               disabledIcon="icons/add_grey_16.gif"
               hoverIcon="icons/add_16.gif"
               icon="icons/add_16.gif"
               label="Hinzufügen"
               style="push"
               tooltip="Neue Adressart hinzufügen">
         </command>
         <command
               commandId="ch.eugster.events.addresstype.command.edit"
               disabledIcon="icons/edit_grey_16.png"
               hoverIcon="icons/edit_16.png"
               icon="icons/edit_16.png"
               label="Bearbeiten"
               style="push"
               tooltip="Ausgewählte Adressart bearbeiten">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="ch.eugster.events.persistence.model.AddressType">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="ch.eugster.events.addresstype.command.delete"
               disabledIcon="icons/delete_grey_16.png"
               hoverIcon="icons/delete_16.png"
               icon="icons/delete_16.png"
               label="Entfernen"
               style="push"
               tooltip="Ausgewählte Adressart entfernen">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate>
                     <instanceof
                           value="ch.eugster.events.persistence.model.AddressType">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:ch.eugster.events.addresstype.view">
         <command
               commandId="ch.eugster.events.addresstype.command.add"
               disabledIcon="icons/add_grey_16.gif"
               hoverIcon="icons/add_16.gif"
               icon="icons/add_16.gif"
               label="Hinzufügen"
               style="push"
               tooltip="Neue Adressart hinzufügen">
         </command>
         <command
               commandId="ch.eugster.events.addresstype.command.edit"
               disabledIcon="icons/edit_grey_16.png"
               hoverIcon="icons/edit_16.png"
               icon="icons/edit_16.png"
               label="Bearbeiten"
               style="push"
               tooltip="Ausgewählte Adressart bearbeiten">
         </command>
         <command
               commandId="ch.eugster.events.addresstype.command.delete"
               disabledIcon="icons/delete_grey_16.png"
               hoverIcon="icons/delete_16.png"
               icon="icons/delete_16.png"
               label="Entfernen"
               style="push"
               tooltip="Ausgewählte Adressart entfernen">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="ch.eugster.events.addresstype.category"
            defaultHandler="ch.eugster.events.addresstype.handlers.AddAddressTypeHandler"
            description="Hinzufügen einer neuen Adressart"
            id="ch.eugster.events.addresstype.command.add"
            name="Hinzufügen">
      </command>
      <command
            categoryId="ch.eugster.events.addresstype.category"
            description="Entfernen der gewählten Adressart"
            id="ch.eugster.events.addresstype.command.delete"
            name="Entfernen">
      </command>
      <command
            categoryId="ch.eugster.events.addresstype.category"
            description="Bearbeiten der ausgewählten Adressart"
            id="ch.eugster.events.addresstype.command.edit"
            name="Bearbeiten">
      </command>
      <category
            id="ch.eugster.events.addresstype.category"
            name="Adressarten">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ch.eugster.events.addresstype.handlers.DeleteAddressTypeHandler"
            commandId="ch.eugster.events.addresstype.command.delete">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate>
                  <instanceof
                        value="ch.eugster.events.persistence.model.AddressType">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="ch.eugster.events.addresstype.handlers.EditAddressTypeHandler"
            commandId="ch.eugster.events.addresstype.command.edit">
         <enabledWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <instanceof
                           value="ch.eugster.events.persistence.model.AddressType">
                     </instanceof>
                  </iterate>
               </and>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ch.eugster.events.addresstype.command.add"
            contextId="ch.eugster.events.addresstype.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+N">
      </key>
      <key
            commandId="ch.eugster.events.addresstype.command.edit"
            contextId="ch.eugster.events.addresstype.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+E">
      </key>
      <key
            commandId="ch.eugster.events.addresstype.command.delete"
            contextId="ch.eugster.events.addresstype.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+D">
      </key>
      <key
            commandId="org.eclipse.ui.file.revert"
            contextId="ch.eugster.events.addresstype.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+R">
      </key>
      <key
            commandId="org.eclipse.ui.file.save"
            contextId="ch.eugster.events.addresstype.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+S">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="ch.eugster.events.addresstype.context"
            name="Kontext Adresstyp"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>

</plugin>
