<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="ch.eugster.events.core.perspective">
         <view
               closeable="true"
               id="ch.eugster.events.domain.view"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="ch.eugster.events.addresstype.view"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="ch.eugster.events.domain.category.views"
            class="ch.eugster.events.domain.views.DomainView"
            icon="icons/domain_16.gif"
            id="ch.eugster.events.domain.view"
            name="Domänen"
            restorable="true">
      </view>
      <category
            id="ch.eugster.events.domain.category.views"
            name="Domänen">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="ch.eugster.events.domain.editors.DomainEditor"
            icon="icons/domain_16.gif"
            id="ch.eugster.events.domain.editor"
            name="Domäne">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="ch.eugster.events.domain.editor"
            targetID="ch.eugster.events.domain.editor">
         <action
               class="ch.eugster.events.ui.actions.ResetEditorActionDelegate"
               definitionId="org.eclipse.ui.file.revert"
               disabledIcon="icons/reset_grey_16.png"
               hoverIcon="icons/reset_16.png"
               icon="icons/reset_16.png"
               id="ch.eugster.events.domain.editor.revert"
               label="Revert"
               mode="FORCE_TEXT"
               style="push"
               toolbarPath="ch.eugster.events.ui.toolbar.editor.actions"
               tooltip="Verwerfen der vorgenommene Änderungen">
         </action>
         <action
               class="ch.eugster.events.ui.actions.SaveEditorActionDelegate"
               definitionId="org.eclipse.ui.file.save"
               disabledIcon="icons/save_grey_16.png"
               hoverIcon="icons/save_16.png"
               icon="icons/save_16.png"
               id="ch.eugster.events.domain.editor.save"
               label="Save"
               mode="FORCE_TEXT"
               style="push"
               toolbarPath="ch.eugster.events.ui.toolbar.editor.actions"
               tooltip="Speichern der vorgenommenen Änderungen">
         </action>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="ch.eugster.events.domain.category.edit"
            name="Bearbeiten">
      </category>
      <command
            categoryId="ch.eugster.events.domain.category.edit"
            description="Hinzufügen einer neuen Domäne"
            id="ch.eugster.events.domain.add"
            name="Hinzufügen">
      </command>
      <command
            categoryId="ch.eugster.events.domain.category.edit"
            description="Entfernen der gewählten Domäne"
            id="ch.eugster.events.domain.delete"
            name="Entfernen">
      </command>
      <command
            categoryId="ch.eugster.events.domain.category.edit"
            description="Bearbeiten der ausgewählten Domäne"
            id="ch.eugster.events.domain.edit"
            name="Bearbeiten">
      </command>
      <category
            id="ch.eugster.events.domain.category.view"
            name="Sichten">
      </category>
      <command
            categoryId="ch.eugster.events.domain.category.view"
            description="Domänensicht aktivieren"
            id="ch.eugster.events.domain.activateView"
            name="Domänensicht aktivieren">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ch.eugster.events.domain.handlers.AddDomainHandler"
            commandId="ch.eugster.events.domain.add">
         <activeWhen>
            <reference
                  definitionId="active.part.domain.view">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="active.part.domain.view">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="ch.eugster.events.domain.handlers.DeleteDomainHandler"
            commandId="ch.eugster.events.domain.delete">
         <activeWhen>
            <reference
                  definitionId="active.part.domain.view">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="selected.single.item.domain">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="ch.eugster.events.domain.handlers.EditDomainHandler"
            commandId="ch.eugster.events.domain.edit">
         <activeWhen>
            <reference
                  definitionId="active.part.domain.view">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="selected.single.item.domain">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="ch.eugster.events.domain.handlers.ActivateView"
            commandId="ch.eugster.events.domain.activateView">
         <activeWhen>
            <not>
               <reference
                     definitionId="active.part.domain.view">
               </reference>
            </not>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:ch.eugster.events.domain.view?after=additions">
         <command
               commandId="ch.eugster.events.domain.add"
               disabledIcon="icons/add_grey_16.gif"
               hoverIcon="icons/add_16.gif"
               icon="icons/add_16.gif"
               id="ch.eugster.events.domain.add"
               label="Hinzufügen"
               mnemonic="N"
               style="push"
               tooltip="Hinzufügen einer neuen Domäne">
         </command>
         <command
               commandId="ch.eugster.events.domain.edit"
               disabledIcon="icons/edit_grey_16.png"
               hoverIcon="icons/edit_16.png"
               icon="icons/edit_16.png"
               id="ch.eugster.events.domain.edit"
               label="Bearbeiten"
               style="push"
               tooltip="Bearbeiten der ausgewählten Domäne">
         </command>
         <command
               commandId="ch.eugster.events.domain.delete"
               disabledIcon="icons/delete_grey_16.png"
               hoverIcon="icons/delete_16.png"
               icon="icons/delete_16.png"
               id="ch.eugster.events.domain.delete"
               label="Entfernen"
               mnemonic="L"
               style="push"
               tooltip="Enternen der ausgewählten Domäne">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:ch.eugster.events.domain.view?after=additions">
         <command
               commandId="ch.eugster.events.domain.add"
               disabledIcon="icons/add_grey_16.gif"
               hoverIcon="icons/add_16.gif"
               icon="icons/add_16.gif"
               id="ch.eugster.events.domain.add"
               label="Hinzufügen"
               mnemonic="N"
               style="push"
               tooltip="Hinzufügen einer neuen Domäne">
         </command>
         <command
               commandId="ch.eugster.events.domain.edit"
               disabledIcon="icons/edit_grey_16.png"
               hoverIcon="icons/edit_16.png"
               icon="icons/edit_16.png"
               id="ch.eugster.events.domain.edit"
               label="Bearbeiten"
               style="push"
               tooltip="Bearbeiten der ausgewählten Domäne">
         </command>
         <command
               commandId="ch.eugster.events.domain.delete"
               disabledIcon="icons/delete_grey_16.png"
               hoverIcon="icons/delete_16.png"
               icon="icons/delete_16.png"
               id="ch.eugster.events.domain.delete"
               label="Entfernen"
               mnemonic="L"
               style="push"
               tooltip="Entfernen der ausgewählten Domäne">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:ch.eugster.events.ui.menu.views?after=additions">
         <command
               commandId="ch.eugster.events.domain.activateView"
               hoverIcon="icons/domain_16.gif"
               icon="icons/domain_16.gif"
               label="Domänen"
               style="push"
               tooltip="Aktivieren der Domänensicht">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="selected.single.item.domain">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <and>
               <iterate>
                  <instanceof
                        value="ch.eugster.events.persistence.model.Domain">
                  </instanceof>
               </iterate>
            </and>
         </with>
      </definition>
      <definition
            id="active.part.domain.view">
         <with
               variable="activePart">
            <instanceof
                  value="ch.eugster.events.domain.views.DomainView">
            </instanceof>
         </with>
      </definition>
      <definition
            id="active.menu.selection.single.domain">
         <with
               variable="activeMenuSelection">
            <and>
               <count
                     value="1">
               </count>
               <iterate>
                  <instanceof
                        value="ch.eugster.events.persistence.model.Domain">
                  </instanceof>
               </iterate>
            </and>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ch.eugster.events.domain.add"
            contextId="ch.eugster.events.domain.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+N">
      </key>
      <key
            commandId="ch.eugster.events.domain.delete"
            contextId="ch.eugster.events.domain.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+D">
      </key>
      <key
            commandId="ch.eugster.events.domain.edit"
            contextId="ch.eugster.events.domain.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+E">
      </key>
      <key
            commandId="org.eclipse.ui.file.save"
            contextId="ch.eugster.events.domain.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+S">
      </key>
      <key
            commandId="org.eclipse.ui.file.revert"
            contextId="ch.eugster.events.domain.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+R">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="ch.eugster.events.domain.context"
            name="Kontext Domäne"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>

</plugin>
