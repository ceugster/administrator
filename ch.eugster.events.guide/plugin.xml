<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="ch.eugster.events.course.category"
            class="ch.eugster.events.guide.views.CompensationTypeView"
            icon="icons/money_yellow_16.png"
            id="ch.eugster.events.guide.views.compensation"
            name="Entschädigungsarten"
            restorable="true">
      </view>
      <view
            category="ch.eugster.events.course.category"
            class="ch.eugster.events.guide.views.GuideTypeView"
            id="ch.eugster.events.guide.views.function"
            name="Leitungsfunktionen"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="ch.eugster.events.core.perspective">
         <view
               closeable="true"
               id="ch.eugster.events.guide.views.compensation"
               moveable="true"
               relationship="stack"
               relative="ch.eugster.events.addresstype.view"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="ch.eugster.events.guide.views.function"
               moveable="true"
               relationship="stack"
               relative="ch.eugster.events.addresstype.view"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="ch.eugster.events.guide.editors.CompensationTypeEditor"
            default="false"
            icon="icons/money_yellow_16.png"
            id="ch.eugster.events.guide.editor.compensationtype"
            name="Entschädigungsarten">
      </editor>
      <editor
            class="ch.eugster.events.guide.editors.GuideTypeEditor"
            default="false"
            id="ch.eugster.events.guide.editor.guidetype"
            name="Leitungsfunktionen">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="ch.eugster.events.guide.editors.compensation"
            targetID="ch.eugster.events.guide.editor.compensationtype">
         <action
               class="ch.eugster.events.ui.actions.ResetEditorActionDelegate"
               definitionId="org.eclipse.ui.file.revert"
               disabledIcon="icons/reset_grey_16.png"
               hoverIcon="icons/reset_16.png"
               icon="icons/reset_16.png"
               id="ch.eugster.events.guide.editor.compensation.revert"
               label="Revert"
               mode="FORCE_TEXT"
               style="push"
               toolbarPath="ch.eugster.events.ui.toolbar.editor.actions"
               tooltip="Verwerfen der vorgenommenen Änderungen">
         </action>
         <action
               class="ch.eugster.events.ui.actions.SaveEditorActionDelegate"
               definitionId="org.eclipse.ui.file.save"
               disabledIcon="icons/save_grey_16.png"
               hoverIcon="icons/save_16.png"
               icon="icons/save_16.png"
               id="ch.eugster.events.guide.editor.compensation.save"
               label="Save"
               mode="FORCE_TEXT"
               style="push"
               toolbarPath="ch.eugster.events.ui.toolbar.editor.actions"
               tooltip="Speichern der vorgenommenen Änderungen">
         </action>
      </editorContribution>
      <editorContribution
            id="ch.eugster.events.guide.editors.guidetype"
            targetID="ch.eugster.events.guide.editor.guidetype">
         <action
               class="ch.eugster.events.ui.actions.ResetEditorActionDelegate"
               definitionId="org.eclipse.ui.file.revert"
               disabledIcon="icons/reset_grey_16.png"
               hoverIcon="icons/reset_16.png"
               icon="icons/reset_16.png"
               id="ch.eugster.events.guide.editor.guidetype.revert"
               label="Revert"
               mode="FORCE_TEXT"
               style="push"
               toolbarPath="ch.eugster.events.ui.toolbar.editor.actions"
               tooltip="Verwerfen der vorgenommenen Änderungen">
         </action>
         <action
               class="ch.eugster.events.ui.actions.SaveEditorActionDelegate"
               definitionId="org.eclipse.ui.file.save"
               disabledIcon="icons/save_grey_16.png"
               hoverIcon="icons/save_16.png"
               icon="icons/save_16.png"
               id="ch.eugster.events.guide.editor.guidetype.save"
               label="Save"
               mode="FORCE_TEXT"
               style="push"
               toolbarPath="ch.eugster.events.ui.toolbar.editor.actions"
               tooltip="Speichern der vorgenommenen Änderungen">
         </action>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="ch.eugster.events.guide.commands.compensation.edit"
            name="Bearbeiten">
      </category>
      <command
            categoryId="ch.eugster.events.guide.commands.compensation.edit"
            description="Hinzufügen einer neuen Entschädigungsart"
            id="ch.eugster.events.guide.command.compensation.add"
            name="Hinzufügen">
      </command>
      <command
            categoryId="ch.eugster.events.guide.commands.compensation.edit"
            description="Entfernen der gewählten Entschädigungsart"
            id="ch.eugster.events.guide.command.compensation.delete"
            name="Entfernen">
      </command>
      <command
            categoryId="ch.eugster.events.guide.commands.compensation.edit"
            description="Bearbeiten der ausgewählten Entschädigungsart"
            id="ch.eugster.events.guide.command.compensation.edit"
            name="Bearbeiten">
      </command>
      <command
            categoryId="ch.eugster.events.guide.commands.compensation.edit"
            description="Hinzufügen einer neuen Funktion"
            id="ch.eugster.events.guide.command.function.add"
            name="Hinzufügen">
      </command>
      <command
            categoryId="ch.eugster.events.guide.commands.compensation.edit"
            description="Entfernen der gewählten Funktion"
            id="ch.eugster.events.guide.command.function.delete"
            name="Entfernen">
      </command>
      <command
            categoryId="ch.eugster.events.guide.commands.compensation.edit"
            description="Bearbeiten der ausgewählten Funktion"
            id="ch.eugster.events.guide.command.function.edit"
            name="Bearbeiten">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ch.eugster.events.guide.handlers.AddCompensationTypeHandler"
            commandId="ch.eugster.events.guide.command.compensation.add">
         <activeWhen>
            <reference
                  definitionId="active.part.compensationtype.view">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="active.part.compensationtype.view">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="ch.eugster.events.guide.handlers.EditCompensationTypeHandler"
            commandId="ch.eugster.events.guide.command.compensation.edit">
         <activeWhen>
            <reference
                  definitionId="active.part.compensationtype.view">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="selected.single.item.compensationtype">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="ch.eugster.events.guide.handlers.DeleteCompensationTypeHandler"
            commandId="ch.eugster.events.guide.command.compensation.delete">
         <activeWhen>
            <reference
                  definitionId="active.part.compensationtype.view">
            </reference>
         </activeWhen>
         <enabledWhen>
            <reference
                  definitionId="selected.single.item.compensationtype">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="ch.eugster.events.guide.handlers.AddGuideTypeHandler"
            commandId="ch.eugster.events.guide.command.function.add">
         <enabledWhen>
            <reference
                  definitionId="active.part.function.view">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="ch.eugster.events.guide.handlers.EditGuideTypeHandler"
            commandId="ch.eugster.events.guide.command.function.edit">
         <enabledWhen>
            <reference
                  definitionId="selected.single.item.function">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="ch.eugster.events.guide.handlers.DeleteGuideTypeHandler"
            commandId="ch.eugster.events.guide.command.function.delete">
         <enabledWhen>
            <reference
                  definitionId="selected.single.item.function">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:ch.eugster.events.guide.views.compensation?after=additions">
         <command
               commandId="ch.eugster.events.guide.command.compensation.add"
               disabledIcon="icons/add_grey_16.gif"
               hoverIcon="icons/add_16.gif"
               icon="icons/add_16.gif"
               id="ch.eugster.events.guide.command.compensation.add"
               label="Hinzufügen"
               mnemonic="N"
               style="push"
               tooltip="Hinzufügen einer neuen Entschädigungsart">
         </command>
         <command
               commandId="ch.eugster.events.guide.command.compensation.edit"
               disabledIcon="icons/edit_grey_16.png"
               hoverIcon="icons/edit_16.png"
               icon="icons/edit_16.png"
               id="ch.eugster.events.guide.command.compensation.edit"
               label="Bearbeiten"
               style="push"
               tooltip="Bearbeiten der ausgewählten Entschädigungsart">
         </command>
         <command
               commandId="ch.eugster.events.guide.command.compensation.delete"
               disabledIcon="icons/delete_grey_16.png"
               hoverIcon="icons/delete_16.png"
               icon="icons/delete_16.png"
               id="ch.eugster.events.guide.command.compensation.delete"
               label="Entfernen"
               mnemonic="L"
               style="push"
               tooltip="Enternen der ausgewählten Entschädigungsart">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:ch.eugster.events.guide.views.compensation?after=additions">
         <command
               commandId="ch.eugster.events.guide.command.compensation.add"
               disabledIcon="icons/add_grey_16.gif"
               hoverIcon="icons/add_16.gif"
               icon="icons/add_16.gif"
               id="ch.eugster.events.guide.command.compensation.add"
               label="Hinzufügen"
               mnemonic="N"
               style="push"
               tooltip="Hinzufügen einer neuen Entschädigungsart">
         </command>
         <command
               commandId="ch.eugster.events.guide.command.compensation.edit"
               disabledIcon="icons/edit_grey_16.png"
               hoverIcon="icons/edit_16.png"
               icon="icons/edit_16.png"
               id="ch.eugster.events.guide.command.compensation.edit"
               label="Bearbeiten"
               style="push"
               tooltip="Bearbeiten der ausgewählten Entschädigungsart">
         </command>
         <command
               commandId="ch.eugster.events.guide.command.compensation.delete"
               disabledIcon="icons/delete_grey_16.png"
               hoverIcon="icons/delete_16.png"
               icon="icons/delete_16.png"
               id="ch.eugster.events.guide.command.compensation.delete"
               label="Entfernen"
               mnemonic="L"
               style="push"
               tooltip="Enternen der ausgewählten Entschädigungsart">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:ch.eugster.events.course.menu.views?after=additions">
         <command
               commandId="org.eclipse.ui.views.showView"
               disabledIcon="icons/show_view_grey_16.png"
               hoverIcon="icons/show_view_16.png"
               icon="icons/show_view_16.png"
               label="Entschädigungsarten"
               style="push"
               tooltip="Aktivieren der Entschädigungsartensicht">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="ch.eugster.events.guide.views.compensation">
            </parameter>
         </command>
         <command
               commandId="org.eclipse.ui.views.showView"
               disabledIcon="icons/show_view_grey_16.png"
               hoverIcon="icons/show_view_16.png"
               icon="icons/show_view_16.png"
               label="Leitungsfunktionen"
               style="push"
               tooltip="Aktivieren der Leitungsfunktionensicht">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="ch.eugster.events.guide.views.function">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:ch.eugster.events.guide.views.function?after=additions">
         <command
               commandId="ch.eugster.events.guide.command.function.add"
               disabledIcon="icons/add_grey_16.gif"
               hoverIcon="icons/add_16.gif"
               icon="icons/add_16.gif"
               id="ch.eugster.events.guide.command.function.add"
               label="Hinzufügen"
               mnemonic="N"
               style="push"
               tooltip="Hinzufügen einer neuen Funktion">
         </command>
         <command
               commandId="ch.eugster.events.guide.command.function.edit"
               disabledIcon="icons/edit_grey_16.png"
               hoverIcon="icons/edit_16.png"
               icon="icons/edit_16.png"
               id="ch.eugster.events.guide.command.function.edit"
               label="Bearbeiten"
               style="push"
               tooltip="Bearbeiten der ausgewählten Funktion">
         </command>
         <command
               commandId="ch.eugster.events.guide.command.function.delete"
               disabledIcon="icons/delete_grey_16.png"
               hoverIcon="icons/delete_16.png"
               icon="icons/delete_16.png"
               id="ch.eugster.events.guide.command.function.delete"
               label="Entfernen"
               mnemonic="L"
               style="push"
               tooltip="Enternen der ausgewählten Funktion">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:ch.eugster.events.guide.views.function?after=additions">
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="selected.single.item.compensationtype">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <and>
               <iterate>
                  <instanceof
                        value="ch.eugster.events.persistence.model.CompensationType">
                  </instanceof>
               </iterate>
            </and>
         </with>
      </definition>
      <definition
            id="active.part.compensationtype.view">
         <with
               variable="activePart">
            <instanceof
                  value="ch.eugster.events.guide.views.CompensationTypeView">
            </instanceof>
         </with>
      </definition>
      <definition
            id="active.menu.selection.single.compensationtype">
         <with
               variable="activeMenuSelection">
            <and>
               <count
                     value="1">
               </count>
               <iterate>
                  <instanceof
                        value="ch.eugster.events.persistence.model.CompensationType">
                  </instanceof>
               </iterate>
            </and>
         </with>
      </definition>
      <definition
            id="active.part.function.view">
         <with
               variable="activePart">
            <instanceof
                  value="ch.eugster.events.guide.views.GuideTypeView">
            </instanceof>
         </with>
      </definition>
      <definition
            id="active.menu.selection.single.function">
         <with
               variable="activeMenuSelection">
            <and>
               <count
                     value="1">
               </count>
               <iterate>
                  <instanceof
                        value="ch.eugster.events.persistence.model.GuideType">
                  </instanceof>
               </iterate>
            </and>
         </with>
      </definition>
      <definition
            id="selected.single.item.function">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <and>
               <iterate>
                  <instanceof
                        value="ch.eugster.events.persistence.model.GuideType">
                  </instanceof>
               </iterate>
            </and>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ch.eugster.events.guide.command.compensation.add"
            contextId="ch.eugster.events.guide.compensation.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+N">
      </key>
      <key
            commandId="ch.eugster.events.guide.command.compensation.delete"
            contextId="ch.eugster.events.guide.compensation.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+D">
      </key>
      <key
            commandId="ch.eugster.events.guide.command.compensation.edit"
            contextId="ch.eugster.events.guide.compensation.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+E">
      </key>
      <key
            commandId="ch.eugster.events.guide.command.function.delete"
            contextId="ch.eugster.events.guide.function.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+D">
      </key>
      <key
            commandId="ch.eugster.events.guide.command.function.edit"
            contextId="ch.eugster.events.guide.function.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+E">
      </key>
      <key
            commandId="ch.eugster.events.guide.command.function.add"
            contextId="ch.eugster.events.guide.function.context"
            schemeId="ch.eugster.events.core.scheme"
            sequence="M1+N">
      </key>
      <key
            commandId="org.eclipse.ui.file.save"
            contextId="ch.eugster.events.guide.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+S">
      </key>
      <key
            commandId="org.eclipse.ui.file.revert"
            contextId="ch.eugster.events.guide.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+R">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="ch.eugster.events.guide.compensation.context"
            name="Kontext Kursleitung Entschädigungsarten"
            parentId="org.eclipse.ui.contexts.window">
      </context>
      <context
            id="ch.eugster.events.guide.function.context"
            name="Kontext Kursleitung Funktion"
            parentId="org.eclipse.ui.contexts.window">
      </context>
      <context
            id="ch.eugster.events.guide.context"
            name="Guide Context"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>

</plugin>
